@import normalize
$pad = 2px


*
    box-sizing border-box;

body
    color #444

    em
        font-size 16px

.slide,
ui-slide
    clear: both

    &:nth-child(2) img
        float right


aside
    float left
    padding 100px 20px 20px
    width 270px
    background #ccf

    img
        width 100%

    a
        display block
        font-size 20px
        background #eee
        margin 4px
        padding 4px
        overflow auto
        color #444
        text-decoration none

img[src="/images/pixel.jpg"]
    float left
    margin 0 1em 1em 0
    width 10em

.page
    box-sizing border-box
    padding 20px
    margin-left 280px
    padding-top 50px
    background #fcc

    ui-layout-page &
        margin-left 0

    .main-img
        margin 20px

    .col-1-8 img,
    .col-1-3 img,
    .col-2-3 img,
    .col-1-2 img,
    .col-1-4 img
        float none
        width 100%

    .col-2-3 img
        height 10em

    .col-1-3 img
        height 5em

    .col-1-2 img,
    .col-1-4 img
        height 13em

.grid
    margin 0 0 $pad 0

    &:after
        content ""
        display table
        clear both

[class*='col-']
    float left
    padding-right $pad

    .grid &:last-of-type
        padding-right 0

.col-2-3
    width 66.66%

.col-1-3
    width 33.33%

.col-1-2
    width 50%

.col-1-4
    width 25%

.col-1-8
    width 12.5%


.module
    background #eee
    padding $pad
    margin 3px


.grid-pad
    padding $pad 0 $pad $pad

    [class*='col-']:last-of-type
        padding-right $pad