@import normalize
@import nib

html
    font-size  62.5%

body
    font-size 100%


@media all and (min-width:0em) and (max-width:40em)
    html
        font-size 1.2vmin

@media all and (min-width:40.01em) and (max-width:60em)
    html
        font-size 1.375vmin

@media all and (min-width:60.01em) and (max-width:75em)
    html
        font-size 1.65vmin

@media all and (min-width:75.01em)
    html
        font-size 2vmin

body
    font-family 'Open Sans', Arial
    color #515151

h1,
h2,
h3,
h4,
h5,
h6

    margin 0

h1
    font-size 4rem
    line-height 1.4
    letter-spacing -.2rem

h2
    color: #a9a9a9
    font-size 2.8rem
    font-weight normal
    letter-spacing -.2rem

h3
    font-size 2.8rem
    letter-spacing -.2rem


// splash page
ui-slide.splash
    img
        width: 40%

// title slide
ui-slide[type="title"]
    p
        color #797979
        margin-top 3vmin
    div
        font-size 1.3rem

// topic slides
ui-slide.topics
    article

    ul
        -webkit-align-items center
        align-items center
        display -webkit-flex
        display flex
        -webkit-flex-wrap nowrap
        flex-direction row
        -webkit-flex-direction row
        flex-wrap nowrap
        -webkit-justify-content center
        justify-content center
        list-style: none
        margin 0
        padding 0

    li
        float left
        margin 0
        padding 10px
        text-align center
        transition opacity .6s

        &.faded
            opacity .4

        &.scale
            opacity .4

            &.ui-slide-item-current
                opacity 1
                animation grow 0.4s ease-out 1s 1 forwards

            &.ui-slide-item-done
                opacity 1
                transform scale(1.25)

    img
        width 100%

    span
        display block
        font-size 1.2rem

@keyframes grow
   0%
        transform scale(1)
   100%
        transform scale(1.25)

