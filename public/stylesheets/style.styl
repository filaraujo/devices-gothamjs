@import normalize
@import nib
@import font
@import images


$green = #1fbba6
$orange = #f27935
$blue = #14b9d6
$grayblue = #323a45
$yellow = #ffcb1d

html
    font-size  62.5%

body
    font-size 100%
    font-family 'Lato', Arial
    color $grayblue

h1,
h2,
h3,
h4,
h5,
h6
    margin 0

h1
    color $grayblue
    // font-size 5rem
    font-size: 300%
    font-weight normal
    line-height 1.4
    letter-spacing -.2rem

h2
    color: #5e6d81
    // font-size 2.8rem
    font-weight normal
    letter-spacing -.2rem

h3
    font-size 2.8em
    letter-spacing -.2rem

h4
    color: #a9a9a9
    font-size: 1.6em
    letter-spacing -.1em

h5
    // font-size: 1.3em


//article
article
    padding-top 2em

    > footer
        background #424953
        bottom -1px
        height 8vmin
        left 0
        opacity .9
        position absolute
        right 0

    iframe
        border 0

// hgroup
hgroup
    h3
        span
            color $orange
            font-size .6em
            margin-left .25em
            text-transform uppercase
            word-spacing 3px

// blockquote
blockquote
    font-size 1em
    margin 1em 2em

    p
        margin 0
        padding 0

    footer
        font-style italic
        margin-left 2em
        text-align left

        p
            margin-top .5em

ul
    margin 0
    padding 0


    li
        margin 0
        padding 0

    &.list
        list-style disc

        li
            border-bottom 1px solid #E6E6E6
            position relative
            padding 1em 2em

    &.browsers
        text-align center

        li
            display inline-block
            font-size 5em
            position relative
            margin 0 .1em
            top -.5em

            &.unsupported:before
                opacity .2

        span
            font-weight bold
            font-size .25em
            position absolute
            right 0
            bottom -.33em
            right -.33em





// responsive
ui-slide.responsive

    p
        color #999

    b
        color $grayblue
        font-family 'Open Sans'

// responsive-now
ui-slide.responsive-now
    .orange
        color $orange

    .flexible
        opacity 1
        border-bottom 0

        .hidden
            opacity 0

        &.ui-slide-item-current,
        &.ui-slide-item-done
            border-bottom 1px solid #E6E6E6

            .item,
            .item2
                opacity 0
                display none

            .hidden
                opacity 1

// responsive-easier
ui-slide.responsive-easier
    span
        color $orange

// ress
ui-slide.ress
    h3 span
        color $green


ui-slide.ress-similiar-requests,
ui-slide.ress-sprinkle-magic,
ui-slide.ress-unique-devices

    h4
        color #fff
        background $grayblue
        font-weight normal
        position absolute
        padding 1em 2em 1em 4em
        top 0
        left 0
        opacity .9
        letter-spacing 0
        word-spacing .2em

        b
            font-weight bold
            font-size 1.3em
            font-style italic

    span
        position absolute
        color #fff
        padding .4em 3em
        text-transform uppercase
        z-index 2

        i
            font-size .8em
            margin-left .3em

        b
            font-size: 1.3em

        &:nth-of-type(1)
            background $green
            bottom 18%
            left 0
            padding-right 2em
            text-align right

        &:nth-of-type(2)
            background $blue
            bottom 16%
            right 10%

        &:nth-of-type(3)
            background $orange
            bottom 6%
            left 46%

        &:nth-of-type(4)
            background $yellow
            color $grayblue
            left 30%
            bottom 30%

ui-slide.ress-sprinkle-magic,
ui-slide.ress-unique-devices
    h4
        left auto
        padding 1em 4em 1em 2em
        right 0
        bottom 0
        top auto

    div
        overflow auto
        text-align right
        position absolute
        top 16%
        right 67.5%
        left 0
        transform rotate(13deg)

    span
        padding-right 2em
        position static
        clear both
        float right
        margin-bottom .4em

ui-slide.ress-unique-devices
    h4
        background $blue
        padding 1em 4em 1em 2em
        right 0
        bottom auto
        top 0

    div
        bottom 10%
        left 0
        top auto
        right 0
        transform none
        text-align left

    span
        display block
        float left
        font-size .9em
        padding .7em 2em
        margin 0
        margin-bottom 1em

        &:nth-child(1)
            float right





ui-slide.ress-not-what-it-seems
    div
        position absolute
        top -1%
        bottom -1%
        left 0
        right 70%
        background $orange
        box-shadow 1px 0 3px rgba(0,0,0,.3)
        opacity .4

    p
        bottom 10%
        color #fff
        font-size 1.8em
        font-weight normal
        left 4%
        line-height 2.5em
        position absolute
        text-align center
        text-shadow 0 1px 1px rgba(0,0,0,.3)
        width 22%

        span
            display block
            font-size 3.9em
            font-weight bold
            letter-spacing -3px


ui-slide.ress-your-server
    div
        font-size 1.4em
        position absolute
        left 58%
        top 44%

        span
            float left
            text-transform uppercase

            &:nth-child(1)
                background $yellow
                padding .4em 2em .4em 2em
                text-align right

            &:nth-child(2)
                background $grayblue
                color $yellow
                font-size .7em
                padding .6em 2em .6em 2em
                word-spacing .3em


ui-slide.ress-cookie
    h4
        color #fff
        background $grayblue
        font-weight normal
        position absolute
        padding 1em 2em 1em 4em
        left 0
        bottom -1px
        opacity .8
        letter-spacing 0
        word-spacing .2em



// webcomponents
ui-slide.components
    h3 span
        color $green




// splash page
ui-slide.splash
    img
        width: 40%

// title slide
ui-slide.title
    p
        color #797979
        line-height 1vmin
    div
        font-size 1.3rem
        margin-top 8vmin

// topic slides
ui-slide.topics

    ul
        -webkit-align-items center
        align-items center
        display -webkit-flex
        display flex
        -webkit-flex-wrap nowrap
        flex-direction row
        -webkit-flex-direction row
        flex-wrap nowrap
        -webkit-justify-content center
        justify-content center
        list-style: none
        margin 0
        padding 0

    li
        float left
        margin 0
        padding 10px
        text-align center
        transition opacity .6s

        &.faded
            opacity .4

        &.scale
            opacity 1

            &.ui-slide-item-current
                opacity 1
                animation grow 0.4s ease-out 1s 1 forwards

            &.ui-slide-item-done
                opacity 1
                transform scale(1.25)

    img
        width 100%

    div
        width: 100%
        height: 100%

    span
        display block
        font-size 1.2rem

@keyframes grow
   0%
        transform scale(1)
   100%
        transform scale(1.25)

