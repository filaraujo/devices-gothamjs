@import normalize
@import nib
@import font
@import images


$green = #1fbba6
$orange = #f27935
$blue = #14b9d6
$grayblue = #323a45
$yellow = #ffcb1d

html
    font-size  62.5%

body
    font-size 100%
    font-family 'Lato', Arial
    color $grayblue

h1,
h2,
h3,
h4,
h5,
h6
    margin 0

h1
    color $grayblue
    font-size 5.75em
    font-weight normal
    line-height 1.4
    letter-spacing -.2rem

h2
    color: #5e6d81
    font-size 3em
    font-weight normal
    // letter-spacing -.1em

h3
    font-size 2.8em
    font-size 4em
    line-height .9em
    // letter-spacing -.2em

h4
    color: #a9a9a9
    font-size: 1.4em
    // letter-spacing -.1em

h5
    // font-size: 1.3em


//article
article
    padding-top 2em

    > footer
        background #424953
        bottom -1px
        height 8vmin
        left -1px
        opacity .9
        position absolute
        right -1px

        &.footer-tall
            height 50%

        h3
            position absolute
            bottom 1em
            left 1em
            font-size 2em
            color #fff
            text-transform uppercase

            span
                color #aaa !important
                font-size .66em
                margin-left .4em

    iframe
        border 0

// hgroup
hgroup
    h3
        span
            color $orange
            font-size .6em
            margin-left .25em
            text-transform uppercase
            word-spacing .1em

.lead-in
    font-size 2em

// blockquote
blockquote
    font-size 1em
    margin 1em 2em

    p
        margin 0
        padding 0

    footer
        font-style italic
        margin-left 2em
        text-align left

        p
            margin-top .5em

ul
    margin 0
    padding 0


    li
        margin 0
        padding 0

    &.list
        list-style disc

        li
            border-bottom 1px solid #E6E6E6
            font-size 1.3em
            position relative
            padding 1em 2em

    &.browsers
        text-align center

        li
            display inline-block
            font-size 8.5em
            position relative
            margin 0 .15em
            top -.5em

            &.unsupported:before
                opacity .3
                color #ddd

        span
            font-weight bold
            font-size .2em
            position absolute
            bottom -.33em
            right -.33em

            &.icon-mobile
                bottom auto
                color #666
                right -.75em
                top 0



// title slide
ui-slide.title
    p
        color #fff
        font-size 1.8em
        position absolute
        top 3%
        left 104%
        text-align left
        margin 0
        width 28%

        span
            display block
            font-size .7em
            color $blue

    article
        background $grayblue
        position absolute
        padding 0
        top -3px
        bottom -3px
        right -3px
        left -3px
        height auto !important
        text-align right

    div
        position relative
        margin-right 32%
        margin-top: 22%

    h1
        color #fff
        font-weight bold
        margin 0 0 0 6%
        text-transform: uppercase
        line-height 1em

        span
            color $blue
            font-size 1.15em

    h2
        font-size 1.25em
        margin-top .2em
        margin-left 6%
        text-transform uppercase

        span
            display block
            font-size 1.4em

// responsive
ui-slide.responsive-design,
ui-slide.ress
    p
        color #999
        font-size 1.4em

    b
        color $grayblue
        font-family 'Open Sans'


// responsive-now
ui-slide.responsive-now
    .orange
        color $orange

    .flexible
        opacity 1 !important
        border-bottom 0

        .hidden
            opacity 0

        &.ui-slide-item-current,
        &.ui-slide-item-done
            border-bottom 1px solid #E6E6E6

            .item,
            .item2
                opacity 0 !important
                display none

            .hidden
                opacity 1 !important

// responsive-easier
ui-slide.responsive-easier
    span
        color $orange

// ress
ui-slide.ress
    h3 span
        color $green





ui-slide.ress-similiar-requests,
ui-slide.ress-sprinkle-magic,
ui-slide.ress-found-profile,
ui-slide.ress-new-profile,
ui-slide.ress-unique-devices,
ui-slide.ress-request-fullfilled,
ui-slide.ress-send-sample

    h4
        color #fff
        background $grayblue
        font-weight normal
        position absolute
        padding 1em 2em 1em 4em
        top 0
        left 0
        opacity .9
        letter-spacing 0
        word-spacing .2em

        b
            font-weight bold
            font-size 1.3em
            font-style italic

    span
        position absolute
        color #fff
        padding .4em 3em
        text-transform uppercase
        z-index 2

        i
            font-size .8em
            margin-left .3em

        b
            font-size: 1.3em

        &:nth-of-type(1)
            background $green
            bottom 18%
            left 0
            padding-right 2em
            text-align right

        &:nth-of-type(2)
            background $blue
            bottom 16%
            right 10%

        &:nth-of-type(3)
            background $orange
            bottom 6%
            left 46%

        &:nth-of-type(4)
            background $yellow
            color $grayblue
            left 30%
            bottom 30%

ui-slide.ress-sprinkle-magic,
ui-slide.ress-found-profile,
ui-slide.ress-unique-devices,
ui-slide.ress-request-fullfilled
    h4
        left auto
        padding 1em 4em 1em 2em
        right 0
        bottom 0
        top auto

    div
        overflow auto
        text-align right
        position absolute
        top 16%
        right 67.5%
        left 0
        transform rotate(13deg)

    span
        padding-right 2em
        position static
        clear both
        float right
        margin-bottom .4em

ui-slide.ress-send-sample
    h4
        left auto
        right 0



ui-slide.ress-unique-devices,
ui-slide.ress-request-fullfilled
    h4
        background $blue
        padding 1em 4em 1em 2em
        right 0
        bottom auto
        top 0

    div
        bottom 10%
        left 0
        top auto
        right 0
        transform none
        text-align left

    span
        display block
        float left
        font-size .9em
        padding .7em 2em
        margin 0
        margin-bottom 1em

        &:nth-child(1)
            float right


ui-slide.ress-not-what-it-seems
    div
        position absolute
        top -1%
        bottom -1%
        left 0
        right 70%
        background $orange
        box-shadow 1px 0 3px rgba(0,0,0,.3)
        opacity .4

    p
        bottom 0%
        color #fff
        font-size 1.8em
        font-weight normal
        left 0
        line-height 2.5em
        padding .8em
        position absolute
        opacity 1
        right 70%
        text-shadow 0 2px 4px rgba(0,0,0,.3)

        span
            display block
            font-size 2.7em
            font-weight bold
            letter-spacing -3px
            text-align left


ui-slide.ress-your-server
    div
        font-size 1.4em
        position absolute
        left 58%
        top 44%

        span
            float left
            text-transform uppercase

            &:nth-child(1)
                background $yellow
                padding .4em 2em .4em 2em
                text-align right

            &:nth-child(2)
                background $grayblue
                color $yellow
                font-size .7em
                padding .6em 2em .6em 2em
                word-spacing .3em


ui-slide.ress-cookie,
ui-slide.ress-feature-testing,
ui-slide.ress-precious-cookies
    h4
        color #fff
        background $grayblue
        font-weight normal
        position absolute
        padding 1em 2em 1em 4em
        left 0
        bottom -1px
        opacity .8
        letter-spacing 0
        word-spacing .2em

        b
            font-style italic
            font-weight bold
            font-size 1.3em


// webcomponents
ui-slide[class^="components"]
    h3 span
        color $blue


ui-slide.components-implement,
ui-slide.components-polymer,
ui-slide.components-whats-new
     h4
        color #fff
        background $green
        font-weight normal
        position absolute
        padding 1em 2em 1em 4em
        left 0
        bottom -1px
        opacity .8
        letter-spacing 0
        word-spacing .2em

        b
            font-style italic
            font-weight bold
            font-size 1.3em

ui-slide.components-whats-new

    h4
        background $grayblue
        bottom auto
        top 0
        left auto
        right 0
    div
        position absolute
        bottom 4%
        right 71%

    span
        color #fff
        border 0
        display block
        padding 1em 2em
        margin-bottom .4em
        text-transform uppercase

        &:nth-child(1)
            background $orange

        &:nth-child(2)
            background $grayblue

        &:nth-child(3)
            background $green

        &:nth-child(4)
            background $blue

ui-slide.components-polymer
    h4
        background $blue
        left auto
        padding 1em 4em 1em 2em
        right 0


    iframe
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        height 100%
        width 100%




// topic slides
ui-slide.topics
    article
        overflow visible

    ul
        -webkit-align-items stretch
        align-items stretch
        -webkit-align-content center
        align-content center
        display -webkit-flex
        display flex
        -webkit-flex-wrap wrap
        flex-wrap wrap
        -webkit-flex-direction row
        flex-direction row
        -webkit-justify-content center
        justify-content center
        list-style: none
        margin 0
        padding 0

    li
        color #fff
        font-size 1.5em
        margin 0
        padding 2em
        text-align center
        transition opacity .6s
        text-transform uppercase
        -webkit-flex 1 auto
        flex 1 0

        &:nth-of-type(1)
            background $orange

        &:nth-of-type(2)
            background $green


        &:nth-of-type(3)
            background $blue

        &:nth-of-type(4)
            background $grayblue
            -webkit-flex 1 0 100%
            flex: 1 0 100%


        &.finale
            background $grayblue
        &.faded
            opacity .4

        &.scale
            opacity 1 !important
            z-index 1

            &.ui-slide-item-current
                opacity 1
                animation grow 0.4s ease-out 1s 1 forwards

            &.ui-slide-item-done
                opacity 1
                transform scale(1.25)


    div
        width: 100%
        height: 100%

    span
        display block
        font-size 1.2rem

@keyframes grow
   0%
        transform scale(1)
   100%
        transform scale(1.25)

