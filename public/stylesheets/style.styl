@import normalize
@import nib
@import font

html
    font-size  62.5%

body
    font-size 100%


@media all and (min-width:0em) and (max-width:40em)
    html
        font-size 1.2vmin

@media all and (min-width:40.01em) and (max-width:60em)
    html
        font-size 1.375vmin

@media all and (min-width:60.01em) and (max-width:75em)
    html
        font-size 1.65vmin

@media all and (min-width:75.01em)
    html
        font-size 2vmin

body
    font-family 'Lato', Arial
    color #323a45

h1,
h2,
h3,
h4,
h5,
h6
    margin 0

h1
    color #323a45
    font-size 5rem
    font-weight normal
    line-height 1.4
    letter-spacing -.2rem

h2
    color: #5e6d81
    font-size 2.8rem
    font-weight normal
    letter-spacing -.2rem

h3
    font-size 2.8rem
    letter-spacing -.2rem

h4
    color: #a9a9a9
    font-size: 1.8rem
    letter-spacing -.1rem

.slide-footer
    background #424953
    bottom -1px
    height 8vmin
    left 0
    opacity .9
    position absolute
    right 0

ul.browsers
    margin 0
    padding 0
    text-align center

    li
        display inline-block
        font-size 10vmin
        position relative
        margin 0 1vmin
        top -5vmin

        &.unsupported:before
            opacity .2

        span
            font-weight bolder
            font-size 2.2vmin
            font-family 'Signika'
            position absolute
            left 50%
            margin-left: -1.1vmin
            bottom -1vmin
            right -5vmin



// splash page
ui-slide.splash
    img
        width: 40%

// title slide
ui-slide[type="title"]
    p
        color #797979
        line-height 1vmin
    div
        font-size 1.3rem
        margin-top 8vmin

// topic slides
ui-slide.topics
    article

    ul
        -webkit-align-items center
        align-items center
        display -webkit-flex
        display flex
        -webkit-flex-wrap nowrap
        flex-direction row
        -webkit-flex-direction row
        flex-wrap nowrap
        -webkit-justify-content center
        justify-content center
        list-style: none
        margin 0
        padding 0

    li
        float left
        margin 0
        padding 10px
        text-align center
        transition opacity .6s

        &.faded
            opacity .4

        &.scale
            opacity .4

            &.ui-slide-item-current
                opacity 1
                animation grow 0.4s ease-out 1s 1 forwards

            &.ui-slide-item-done
                opacity 1
                transform scale(1.25)

    img
        width 100%

    div
        width: 100%
        height: 100%

    span
        display block
        font-size 1.2rem

@keyframes grow
   0%
        transform scale(1)
   100%
        transform scale(1.25)

